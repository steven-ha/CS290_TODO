<h1>MySQL Results:</h1>
<div id="addForm">
	<form method="post" id="addForm">
		<fieldset>
			<label>Name </label>
			<input type="text" name="name"><br>
			<label>Reps </label>
			<input type="number" name="reps"><br>	
			<label>Weight </label>			
			<input type="number" name="weight"><br>
			<label>Date </label>
			<input type="date" name="date"><br>	
			<label>Weight Units</label>
			<select name="lbs">
				<option value=1>lbs</option>
				<option value=0>kgs</option>			
			</select>
		</fieldset>
		<input type="submit" value="Add Workout" id="submitData" />
	</form>
		
</div>
	
	
	</form>
<p>{{results}}</p>
<table>
	<thead>
		<tr>
			<td>ID</td>
			<td>Name</td>
			<td>Reps</td>
			<td>Weight</td>
			<td>Date</td>
			<td>lbs</td>
		</tr>
	</thead>
	<tbody>
		{{#each results.list}}
		<tr>
			<td>{{this.id}}</td>
			<td>{{this.name}}</td>
			<td>{{this.reps}}</td>
			<td>{{this.weight}}</td>
			<td>{{this.date}}</td>
			<td>{{this.lbs}}</td>
		</tr>
		{{/each}}
	</tbody>
</table>
